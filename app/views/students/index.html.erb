<p id="notice"><%= notice %></p>
<div class="student_list">

  <h1>学生情報</h1>

  <table>
    <thead>
      <tr>
        <th>名前(匿名)</th>
        <th>順位</th>
        <th>第1希望</th>
        <th>第2希望</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tr><th></th></tr>
    <tbody>
      <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.rank %></td>
        <td><%= Lab.find(student.first).name %>研究室</td>
        <td><% if student.second==nil%>未指定<%else%><%= Lab.find(student.second).name %>研究室<%end%></td>
        <% if student.third == current_user.id || current_user.id == 1%>
        <td><%= link_to '編集', edit_student_path(student) %></td>
        <td><%= link_to '削除', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to '新規追加', new_student_path %>

</div>
